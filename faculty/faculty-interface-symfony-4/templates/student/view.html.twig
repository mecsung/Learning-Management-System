{% extends 'base.html.twig' %}

{% block title %} View My Students {% endblock %}

{% block stylesheets %}
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico"/>
	<!-- FONT AWESOME -->
	<script src="https://kit.fontawesome.com/575abfd474.js" crossorigin="anonymous"></script>
	<!-- BOOTSTRAP -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <style>
        body {
            background: #EEEEEE;
        }
        span {
            color: blue;
        }
        *{
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
            box-sizing: border-box;
            font-family: "Roboto", sans-serif;
        }

        /********** HEADER **********/
        .wrapper .header{
            z-index: 1;
            background: #A41034;
            position: fixed;
            width: calc(100% - 0%);
            height: 70px;
            display: flex;
            top: 0;
        }
        .wrapper .header .header-menu{
            width: calc(100% - 0%);
            height: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }
        .wrapper .header .header-menu .title{
            color: #fff;
            font-size: 20px;
            text-transform: uppercase;
            font-weight: 900;
        }
        /********** SIDEBAR **********/
        .wrapper .sidebar{
            z-index: 1;
            background: #FFF;
            box-shadow: 10px 10px 15px grey;
            position: fixed;
            top: 70px;
            width: 180px;
            height: calc(100% - 9%);
            transition: 0.3s;
            transition-property: width;
            overflow-y: auto;
        }
        .wrapper .sidebar .sidebar-menu{
            overflow: hidden;
        }
        .wrapper .sidebar .sidebar-menu .profile img{
            margin: 20px 0;
            width: 90px;
            height: 90px;
        }
        .wrapper .sidebar .sidebar-menu .profile p{
            color: grey;
            font-weight: 650;
        }
        .wrapper .sidebar .sidebar-menu .item{
            width: 250px;
            overflow: hidden;
            font-size: 14px;
        }
        .wrapper .sidebar .sidebar-menu .item a{
            text-decoration: none;
        }
        .wrapper .sidebar .sidebar-menu .item .menu-btn{
            display: block;
            color: #000;
            position: relative;
            padding: 10px 20px;
            transition: 0.3s;
            transition-property: color;
        }
        .wrapper .sidebar .sidebar-menu .item button {
            border: none;
            background: none;
        }
        .wrapper .sidebar .sidebar-menu .item button:hover {
            color: #FFF;
        }
        /********** SIDEBAR BUTTONS **********/
        .wrapper .sidebar .sidebar-menu .item .menu-btn span{
            padding: 20px;
            background: #A41034;
            border-radius: 2em;
            color: #fff;
        }
        .wrapper .sidebar .sidebar-menu .item .menu-btn span:hover{
            background: #C2133D;
        }
        .wrapper .sidebar .sidebar-menu .item .menu-btn:hover{
            background: #C2133D;
            color: #FFF;
            text-decoration: none;
        }
        .wrapper .sidebar .sidebar-menu .item .menu-btn i{
          margin-right: 20px;
        }
        /********** LOGOUT MODAL **********/
        .modal .modal-dialog .modal-content .modal-footer button {
            font-size: 14px;
        }
        .modal .modal-dialog .modal-content .modal-footer button a {
            text-decoration: none;
            color: #FFF;
        }

        /********** MAIN CONTAINER **********/
        .wrapper .content{
            width: (100% - 250px);
            margin-top: 70px;
            margin-left: 220px;
            padding: 15px;
            background-size: cover;
            height: 100vh;
            transition: 0.3s;
        }
        .view a {
            color: royalblue;
            text-decoration: none;
        }
        table {
            font-size: 15px;
        }
    </style>
{% endblock %}

{% block body %}
<body>
    <!--wrapper start-->
    <div class="wrapper">
        <!--header menu start-->
        <div class="header">
            <div class="header-menu">
                <div class="title">Aoba Johsai Academy</div>
            </div>
        </div>
        <!--header menu end-->
        <!--sidebar start-->
        <div class="sidebar">
            <div class="sidebar-menu">
                <center class="profile">
                    <img src="assets/logo.png" alt="">
                    <p>{{ app.user.username }}</p>
                </center>
                <hr></hr>
                <li class="item">
                    <a href="/dashboard" class="menu-btn">
                        <i class="fas fa-desktop"></i>Dashboard
                    </a>
                </li>
                <li class="item">
                    <a href="/student" class="menu-btn">
                        <span><i class="fas fa-graduation-cap"></i>Student</span>
                    </a>
                </li>
                <li class="item">
                    <a href="/grading" class="menu-btn">
                        <i class="fas fa-file-excel"></i>Grading
                    </a>
                </li>
                <li class="item">
                    <a href="/profile" class="menu-btn">
                        <i class="fas fa-users-cog"></i>Profile
                    </a>
                </li>
                
                <!-- Button trigger modal -->   
                <li class="item">
                    <div class="menu-btn">
                        {% if app.user %}
                        <a href="{{ path('app_logout') }}">
                            <button>
                                <i class="fas fa-sign-out-alt"></i>Logout
                            </button>
                        </a>
                        {% endif %}
                    </div>  
                </li>
            </div>
        </div>
        <!--sidebar end-->
        <!--main container start-->
        <div class="content">
            <div class="directory">
                <p>My Classes / My Students </p>
            </div>
            <hr></hr>
            
            <h5>My Students in <span>{{ course.coursename }}</span> | <span>{{ course.class }}</span></h5>
            
            <table class="table table-bordered">
                <tr>
                    <th>Student Name            </th>
                    <th>Action                  </th>
                </tr>
                {% for s in students %}
                <tbody>
                    <tr>
                        <td>{{ s.fullname }}</td>
                        <td>Grade</td>
                    </tr>
                </tbody>
                {% endfor %}
            </table>


        </div>
        <!--main container end-->
    </div>
    <!--wrapper end-->

    </div>
</body>
{% endblock %}
